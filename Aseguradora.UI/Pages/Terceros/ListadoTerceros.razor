@page "/ListadoTerceros"
@inject listarTerceroUseCase ListarTerceros
@inject NavigationManager Navegador

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>APELLIDO</th>
            <th>DNI</th>
            <th>Nombre de Aseguradora</th>
            <th>id Siniestro Participo</th>
            <th>TELEFONO</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cli in _lista)
        {
            <tr>
                <td>@cli.id</td>
                <td>@cli.nombre</td>
                <td>@cli.apellido</td>
                <td>@cli.dni</td>
                <td>@cli.nombreAseguradora</td>
                <td>@cli.siniestroid</td>
                <td>@cli.tel</td>
            </tr>
        }
    </tbody>
</table>
<style>
#agg{
    border-color : black;
}
#elim{
    background-color : red;
    border-color:black;
}
#mod{
    background-color: green;
    border-color: black;
}
</style>
<button id="agg" class="btn btn-primary" @onclick="NavegarA">Agregar</button>
<button id = "elim" class="btn btn-primary" @onclick="NavegarE">Eliminar</button>
<button id = "mod" class="btn btn-primary" @onclick="NavegarM">Modificar</button>

@code {

    Tercero persona = new Tercero();
    List<Tercero> _lista = new List<Tercero>();
    protected override void OnInitialized()
    {
        _lista = ListarTerceros.Ejecutar();
    }

    void NavegarA(){
        Navegador.NavigateTo("/Terceros/Agregar");
    }

    void NavegarE(){
        Navegador.NavigateTo("/Terceros/Eliminar");
    }

    void NavegarM(){
        Navegador.NavigateTo("/Terceros/Modificar");
    }

}
